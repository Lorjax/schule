<div class="large-6 columns" id="flash_messages" style="z-index: 1000; position: absolute; display:none;">
	<div class="large-6 large-centered columns" style="margin-top: 30px;">
		<% if flash[:notice] %>
			<div data-alert class="alert-box success radius">
				<%= flash[:notice] %>
				<a href="#" class="close">&times;</a>
			</div>
		<% end %>

		<% if flash[:alert] %>
			<div data-alert class="alert-box alert radius">
				<%= flash[:alert] %>
				<a href="#" class="close">&times;</a>
			</div>
		<% end %>
	</div>
</div>

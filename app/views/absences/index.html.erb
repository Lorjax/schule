<p id="notice"><%= notice %></p>

<h1>Listing Absences</h1>

<table>
  <thead>
    <tr>
      <th>Datum</th>
      <th>Anzahl</th>
      <th>Pupil</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @absences.each do |absence| %>
      <tr>
        <td><%= absence.datum %></td>
        <td><%= absence.anzahl %></td>
        <td><%= absence.pupil.vorname + " " + absence.pupil.nachname %></td>
        <td><%= link_to 'Show', absence %></td>
        <td><%= link_to 'Edit', edit_absence_path(absence) %></td>
        <td><%= link_to 'Destroy', absence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

